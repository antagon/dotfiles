syntax on
colorscheme solarized

set title
set hlsearch
set ignorecase
set number
set nocompatible
set colorcolumn=80
set history=128
set undolevels=128
set smartindent
set background=dark
set tabstop=4
set shiftwidth=4

" Goodies for HTML editing
set matchpairs+=<:>
set showmatch
set matchtime=3
set pastetoggle=<F2>

nnoremap <silent> <C-l> :nohl<CR><C-l>
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
map <C-n> :NERDTreeToggle<CR>

